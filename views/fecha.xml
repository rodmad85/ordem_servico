<odoo>
    <record model="ir.ui.view" id="ordem_servico_fecha_search_view">
        <field name="name">ordem_servico_fecha_search</field>
        <field name="model">os.fecha</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

     <record model="ir.ui.view" id="ordem_servico_fecha_tree_view">
        <field name="name">ordem_servico_fecha_tree</field>
        <field name="model">os.fecha</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ordem_servico"/>
                <field name="mp_prevista"/>
                <field name="mp_real"/>
                <field name="mo_prevista"/>
                <field name="mo_real"/>
                <field name="horas_prevista"/>
                <field name="horas_resultado"/>
                <field name="comissao"/>
                <field name="custo_fixo" optional="show"/>
                <field name="impostos"/>
                <field name="mp_resultado"/>
                <field name="mo_resultado"/>



            </tree>

        </field>
     </record>

    <record model="ir.ui.view" id="ordem_servico_fecha_form_view">
        <field name="name">ordem_servico_fecha_form</field>
        <field name="model">os.fecha</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ordem_servico" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="OrÃ§ado">
                            <field name="mp_prevista" readonly="1"/>
                            <field name="mo_prevista" readonly="1"/>
                            <field name="horas_prevista" readonly="1"/>
                            <field name="impostos" readonly="1"/>
                            <field name="margem" readonly="1"/>
                            <field name="comissao" readonly="1"/>

                        </group>
                        <group string="Medido">
                           <field name="mp_real" readonly="1"/>
                           <field name="mo_real" readonly="1"/>
                           <field name="horas_real" readonly="1"/>

                        </group>
                    </group>
                    <group>
                        <group string="Resultados">
                            <group>
                                <field name="data_entrega" readonly="1"/>
                                <field name="entrega_efetiva" readonly="1"/>
                            </group>
                            <group>
                                <field name="mp_resultado" readonly="1"/>
                                <field name="mo_resultado" readonly="1"/>
                                <field name="horas_resultado" readonly="1"/>
                                <field name="impostos_resultado" readonly="1"/>
                            </group>
                            <group>
                                <field name="orcado" readonly="1"/>
                                <field name="total_gastos" readonly="1"/>
                                <field name="resultado" readonly="1"/>
                                <field name="resultado_percen" readonly="1"/>
                            </group>
                        </group>
                    </group>


                </sheet>
            </form>
        </field>
     </record>
</odoo>